/*
 as the title says this
 program just continually
 asks for input from the
 user. Its really simple
 but i just needed to
 post something :P
 */

#include <iostream>
#include <string>

using namespace std;

int main()
{
    
    string userInput;
    int whileLoopCheck = 1;
    
    while(whileLoopCheck == 1)
    {
        cin >> userInput;
        
        cin.clear();
        cin.ignore(256,'\n');
        
        if(cin.fail())
        {
            cin.clear();
            cin.ignore(256,'\n');
        }
    }
    
}
